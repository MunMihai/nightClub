@using nightClub.Domain.Enums
@model dynamic
@{
    ViewBag.Title = "Staff";
}


<section id="staff" class="staff">
    <div class="container" date-aos="fade-up">
        <div class="section-title">
            <h2>Staff List</h2>
        </div>
        @if (ViewBag.CurrentUser.Level == URole.Admin)
        {
            <a href=@Url.Action("Create")>Add New Staff Member</a>
        }
        <div class="row">

            @foreach (var staff in Model)
            {
                <div class="col-lg-3 col-md-6 d-flex align-items-stretch">
                    <div class="member" data-aos="fade-up" data-aos-delay="100">
                        <div class="member-img">
                            <a href="@Url.Action("EmployeeDetail", "Staff", new {id = staff.Id})" title="More Details"><img src="@staff.ImageUrl" class="img-fluid" alt=""></a>

                        </div>
                        <div class="member-info">
                            <h4>@staff.FirstName @staff.LastName</h4>
                            <span>@staff.Role</span>
                        </div>
                        @if (ViewBag.CurrentUser.Level == URole.Admin) 
                        {

                            <td class="align-middle">
                                <a class="btn btn-outline-primary" href=@Url.Action("Edit", "Staff", new {id = staff.Id})>
                                    <i class="bi bi-pencil-square">Edit</i>
                                </a>
                                <a class="btn btn-outline-info" href=@Url.Action("Details", "Staff", new {id = staff.Id})>
                                    <i class="bi bi-eye">Details</i>
                                </a>
                                <a class="btn btn-outline-danger float-end" href=@Url.Action("Delete", "Staff", new {id = staff.Id})>
                                    <i class="bi bi-trash">Delete</i>
                                </a>
                            </td>
                        }
                    </div>
                </div>
            }
        </div>

    </div>
</section>

