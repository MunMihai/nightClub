@model dynamic

@{
    ViewBag.Title = "Staff";
}

<section id="staff" class="staff">
    <div class="container" date-aos="fade-up">
        <div class="section-title">
            <h2>Staff List</h2>
        </div>
        <p><a href=@Url.Action("Create")>Add New Staff Member</a></p>
        <div class="row">

            @foreach (var staff in Model)
            {
                <div class="col-lg-3 col-md-6 d-flex align-items-stretch">
                    <div class="member" data-aos="fade-up" data-aos-delay="100">
                        <div class="member-img">
                            <img src="@staff.ImageUrl" class="img-fluid" alt="">
                            <div class="social">
                                <a href=""><i class="bi bi-twitter"></i></a>
                                <a href=""><i class="bi bi-facebook"></i></a>
                                <a href=""><i class="bi bi-instagram"></i></a>
                                <a href=""><i class="bi bi-linkedin"></i></a>
                            </div>
                        </div>
                        <div class="member-info">
                            <h4>@staff.FirstName @staff.LastName</h4>
                            <span>@staff.Role</span>
                        </div>
                        @if (true) // modificare pentru rol
                        {

                            <td class="align-middle">
                                <a class="btn btn-outline-primary"><i class="bi bi-pencil-square">Edit</i></a>
                                <a class="btn btn-outline-info" href=@Url.Action("Details", "Staff", new {id = staff.Id})>
                                    <i class="bi bi-eye">Details</i>
                                </a>
                                <a class="btn btn-outline-danger float-end"><i class="bi bi-trash">Delete</i></a>
                            </td>
                        }
                    </div>
                </div>
            }
        </div>

    </div>
</section>

