@using nightClub.Web.Models
@{
    ViewBag.Title = "Gallery";
}

<section id="portfolio" class="portfolio">
    <div class="container" data-aos="fade-up">
        <div class="section-title">
            <h2>Gallery</h2>
        </div>
        <p><a href=@Url.Action("Create")>Add New Photo</a></p>

        <div class="row">

            @foreach (var photo in Model)
            {
                <div class="col-lg-3 col-md-6 d-flex align-items-stretch">
                    <div class="member" data-aos="fade-up" data-aos-delay="100">
                        <div class="member-img">
                            <img src="@photo.Url" class="img-fluid" alt="">
                            <div class="social">
                                <a href="#twitter"><i class="bi bi-twitter"></i></a>
                                <a href="#facebook"><i class="bi bi-facebook"></i></a>
                                <a href="#instagram"><i class="bi bi-instagram"></i></a>
                                <a href="#likedin"><i class="bi bi-linkedin"></i></a>
                            </div>
                        </div>
                        <div class="member-info">
                            <h4>@photo.Title</h4>
                            <span>@photo.Date</span>
                        </div>
                        @if (true) // modificare pentru rol
                        {

                            <td class="align-middle">
                                <a class="btn btn-outline-primary" href=@Url.Action("Edit", "Staff", new { id = photo.Id })>
                                    <i class="bi bi-pencil-square">Edit</i>
                                </a>
                                <a class="btn btn-outline-info" href=@Url.Action("Details", "Staff", new { id = photo.Id })>
                                    <i class="bi bi-eye">Details</i>
                                </a>
                                <a class="btn btn-outline-danger float-end" href=@Url.Action("Delete", "Staff", new { id = photo.Id })>
                                    <i class="bi bi-trash">Delete</i>
                                </a>
                            </td>
                        }
                    </div>
                </div>
            }
        </div>

    </div>
</section>