@{
    Layout = "~/Views/Shared/_Layout_Blanck.cshtml";
    ViewBag.Title = "Not Found";
}

<style>
    h2 {
        font-size: 5rem;
    }
    #not-found {
        position: absolute;
        top: 30%;
        left: 50%;
        transform: translate(-50%, -50%);
    }
</style>

<div id="not-found" class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <h2 class="my-5">404 - Not Found</h2>
            <p>The page you are looking for could not be found.</p>
            <p>Click @Html.ActionLink("here", "Index", "Home") to go back to the home page.</p>
        </div>
    </div>
</div>